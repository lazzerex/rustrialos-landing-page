---
/**
 * Code Showcase Section
 * Displays featured code examples from Rustrial OS
 */
import Badge from '@/components/ui/data-display/Badge/Badge.astro';

const codeExamples = [
  {
    title: 'Memory Allocator',
    badge: 'allocator.rs',
    code: `pub struct BumpAllocator {
    heap_start: usize,
    heap_end: usize,
    next: AtomicUsize,
}

impl BumpAllocator {
    pub const fn new() -> Self {
        BumpAllocator {
            heap_start: 0,
            heap_end: 0,
            next: AtomicUsize::new(0),
        }
    }
}`,
  },
  {
    title: 'Async Runtime',
    badge: 'executor.rs',
    code: `pub struct Executor {
    task_queue: Arc<ArrayQueue<TaskId>>,
}

impl Executor {
    pub fn new() -> Self {
        Executor {
            task_queue: Arc::new(
                ArrayQueue::new(100)
            ),
        }
    }
    
    pub fn spawn(&self, task: Task) {
        self.task_queue.push(task.id)
            .expect("queue full");
    }
}`,
  },
  {
    title: 'Network Stack',
    badge: 'tcp.rs',
    code: `pub async fn tcp_connect(
    addr: IpAddr,
    port: u16
) -> Result<TcpStream> {
    let socket = Socket::new()?;
    socket.connect(addr, port).await?;
    
    Ok(TcpStream {
        socket,
        state: Connected,
    })
}`,
  },
];
---

<section class="w-full py-[var(--space-section-lg)]">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        See the <span class="text-brand-500">Code</span>
      </h2>
      <p class="text-lg text-foreground-muted max-w-2xl mx-auto">
        Real examples from the Rustrial OS kernel showing memory safety and async patterns
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {codeExamples.map((example, index) => (
        <div class={`group scroll-fade-in-up delay-${index}`}>
          <div class="mb-4 flex items-center justify-between">
            <h3 class="text-xl font-bold text-foreground">{example.title}</h3>
            <Badge variant="brand" class="font-mono text-xs">{example.badge}</Badge>
          </div>
          
          <div class="relative rounded-lg overflow-hidden border border-border bg-black/40 backdrop-blur-sm group-hover:border-brand-500/50 hover-lift transition-all duration-300">
            {/* Code header */}
            <div class="flex items-center gap-2 px-4 py-2 bg-gray-900/50 border-b border-gray-800">
              <div class="flex gap-1.5">
                <div class="w-2.5 h-2.5 rounded-full bg-red-500/60" />
                <div class="w-2.5 h-2.5 rounded-full bg-yellow-500/60" />
                <div class="w-2.5 h-2.5 rounded-full bg-green-500/60" />
              </div>
            </div>
            
            {/* Code content */}
            <pre class="p-4 overflow-x-auto text-sm leading-relaxed"><code class="font-mono text-gray-300">{example.code}</code></pre>
          </div>
        </div>
      ))}
    </div>

    {/* CTA */}
    <div class="mt-16 text-center scroll-fade-in animation-delay-600">
      <a 
        href="https://github.com/lazzerex/rustrial-os" 
        target="_blank"
