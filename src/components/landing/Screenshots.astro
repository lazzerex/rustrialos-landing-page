---
import Card from '@/components/ui/data-display/Card/Card.astro';

const screenshots = [
  {
    src: '/rustrial-os.png',
    alt: 'Rustrial OS Main Interface',
    title: 'Main Interface',
  },
  {
    src: '/rustrial-os-2.png',
    alt: 'Rustrial OS Feature View',
    title: 'System Features',
  },
  {
    src: '/rustrial-os-3.png',
    alt: 'Rustrial OS Desktop Environment',
    title: 'Desktop GUI',
  },
  {
    src: '/rustrial-os-4.png',
    alt: 'Rustrial OS Shell',
    title: 'Interactive Shell',
  },
  {
    src: '/rustrial-os-5.png',
    alt: 'Rustrial OS Advanced Features',
    title: 'Advanced Features',
  },
];
---

<section class="w-full py-[var(--space-section-lg)] relative overflow-hidden">
  <div class="absolute inset-0 bg-gradient-to-b from-background via-background-secondary to-background"></div>
  
  <div class="mx-auto max-w-7xl px-6 md:px-8 lg:px-12 relative z-10">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 scroll-fade-in-up">
        See <span class="text-brand-500">Rustrial OS</span> in Action
      </h2>
      <p class="text-lg text-foreground-muted max-w-2xl mx-auto scroll-fade-in-up delay-1">
        Explore the visual interface and capabilities of our bare-metal operating system
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {screenshots.map((screenshot, i) => (
        <div class={`scroll-fade-in-up delay-${i % 3}`}>
          <Card variant="elevated" padding="none" hover={true} class="h-full overflow-hidden group">
            <div class="relative aspect-video overflow-hidden bg-background-secondary">
              <img 
                src={screenshot.src} 
                alt={screenshot.alt}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute bottom-0 left-0 right-0 p-4 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                <h3 class="text-white font-bold text-lg drop-shadow-lg">
                  {screenshot.title}
                </h3>
              </div>
            </div>
          </Card>
        </div>
      ))}
    </div>

    <div class="text-center mt-12 md:mt-16 scroll-scale-in delay-3">
     
    </div>
  </div>
</section>
