---
const metrics = [
  { label: 'Boot Time', value: '< 100ms', icon: 'zap' },
  { label: 'Context Switch', value: '< 1ms', icon: 'cpu' },
  { label: 'Memory Safe', value: '100%', icon: 'shield' },
  { label: 'Network Speed', value: '100 Mbps', icon: 'network' },
  { label: 'Heap Leaks', value: '0', icon: 'check' },
  { label: 'Task Overhead', value: '< 50Î¼s', icon: 'zap' },
];

const icons: Record<string, string> = {
  zap: 'M13 10V3L4 14h7v7l9-11h-7z',
  cpu: 'M9 3h6l2 2v6l-2 2H9L7 11V5l2-2zm0 12h6l2 2v6l-2 2H9l-2-2v-6l2-2z',
  shield: 'M12 2L4 6v6c0 5.5 3.8 10.7 8 12 4.2-1.3 8-6.5 8-12V6l-8-4z',
  network: 'M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.4 0-8-3.6-8-8s3.6-8 8-8 8 3.6 8 8-3.6 8-8 8zm1-13h-2v6h6v-2h-4V7z',
  check: 'M9 16.2L4.8 12l-1.4 1.4L9 19 21 7l-1.4-1.4L9 16.2z',
};
---

<section class="w-full py-16 bg-gradient-to-r from-black via-gray-900 to-black overflow-hidden relative">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>

  <div class="relative">
    <div class="flex gap-12 animate-marquee-reverse hover:pause-animation">
      {[...metrics, ...metrics].map((metric) => (
        <div class="flex items-center gap-6 bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-xl p-6 border border-brand-500/20 hover:border-brand-500/50 transition-all min-w-[280px] backdrop-blur-sm group hover-lift">
          <div class="w-14 h-14 rounded-full bg-brand-500/10 flex items-center justify-center group-hover:bg-brand-500/20 transition-colors">
            <svg class="w-7 h-7 text-brand-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icons[metric.icon]}></path>
            </svg>
          </div>
          <div>
            <div class="text-3xl font-bold font-mono text-brand-400 mb-1">{metric.value}</div>
            <div class="text-sm text-gray-400 uppercase tracking-wider">{metric.label}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
