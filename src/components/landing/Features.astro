---
import Card from '@/components/ui/data-display/Card/Card.astro';
import Icon from '@/components/ui/primitives/Icon/Icon.astro';

const features = [
  {
    title: 'Memory Safe',
    description: 'Built with Rust to prevent null pointer dereferences, buffer overflows, and memory leaks. 100% safe with zero-cost abstractions.',
    icon: 'shield' as const,
  },
  {
    title: 'Desktop GUI',
    description: 'Interactive graphical environment with mouse-driven interface, icon system, and multi-window support.',
    icon: 'terminal' as const,
  },
  {
    title: 'RustrialScript',
    description: 'Stack-based scripting language with VM, control flow, and VGA integration. Run scripts directly in the OS.',
    icon: 'code' as const,
  },
  {
    title: 'Full TCP/IP Stack',
    description: 'Complete networking with RTL8139 driver, DNS resolver, ARP, ICMP ping, UDP, and TCP with congestion control.',
    icon: 'network' as const,
  },
  {
    title: 'Async/Await Runtime',
    description: 'Cooperative multitasking with waker-based scheduling, async keyboard/mouse processing, and network I/O.',
    icon: 'cpu' as const,
  },
  {
    title: 'Interactive Shell',
    description: 'Command-line interface with filesystem operations, network diagnostics, command history, and scrollback buffer.',
    icon: 'box' as const,
  },
];
---

<section class="max-w-7xl px-6 w-full py-[var(--space-section-md)]">
  <h2 class="text-4xl md:text-5xl font-bold mb-16 text-center">
    Core <span class="text-brand-500">Features</span>
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {features.map((feature, index) => (
      <Card variant="elevated" padding="lg" hover={true} class={`group hover-lift scroll-scale-in delay-${index % 6}`}>
        <div class="mb-6 text-brand-500 group-hover:scale-110 transition-transform duration-300">
          <Icon name={feature.icon} size="xl" />
        </div>
        <h3 class="text-2xl font-bold mb-4 font-mono">{feature.title}</h3>
        <p class="text-foreground-muted leading-relaxed">
          {feature.description}
        </p>
      </Card>
    ))}
  </div>
</section>
